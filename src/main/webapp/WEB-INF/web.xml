<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>dream-tour</display-name>

    <!-- Сервлеты -->
    <servlet>
        <servlet-name>client</servlet-name>
        <servlet-class>controller.ClientServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>employee</servlet-name>
        <servlet-class>controller.EmployeeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>guest</servlet-name>
        <servlet-class>controller.GuestServlet</servlet-class>
    </servlet>

    <!-- Маппинги -->
    <servlet-mapping>
        <servlet-name>client</servlet-name>
        <url-pattern>/client</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>employee</servlet-name>
        <url-pattern>/employee</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>guest</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

</web-app>
